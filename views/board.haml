%table{:cellpadding=>"0", :cellspacing=>"0"}
	%thead>
		%tr
			%th To do
			%th In Progress
			%th Verify
			%th Done
		%tr
			%td
				= board.render_issues(board.todo)
			%td
				= board.render_issues(board.in_progress)
			%td
				= board.render_issues(board.verifying)
			%td
				= board.render_issues(board.done)